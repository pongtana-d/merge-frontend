      body { background: none; }
      ._container {
        display: flex;
        flex-direction: column;
        gap: 30px;
        max-width: none;
        padding: 20px;
        font-size: 1.12rem;
      }
      ._section {
        display: grid;
        width: 100%;

        & + & {
          padding-top: 30px;
          border-top: 1px solid var(--color-gray);
        }

        h2 { margin-bottom: 20px; }

        ul {
          & + & {
            margin-top: 10px;
            padding-top: 10px;
            border-top: 1px solid var(--color-gray-2);
          }
        }

        a:hover {
          text-decoration: underline;
        }
      }


block content
  section.main-visual
    figure.main-visual__image
      picture
        source(media="(min-width:992px)" srcset="/src/images/home/img-mv-merge-sabina-pc.jpg")
        +img(src="/src/images/home/img-mv-merge-sabina-sp.jpg" alt="MERGE X SABINA Collection")
    h1.main-visual__heading
      span MERGE X SABINA
      span.main-visual__heading-sub Collection
    a.main-visual__button(href="/collection/") DISCOVER
    .main-visual__marquee
      .box-marquee.box-marquee--mv
        .splide.js-marquee-slider
          .splide__track
            .splide__list
              .splide__slide
                .box-marquee__text
                  p: span 30 DAYS TO RETURN
                  p //  Shop safely from home via #[span LINE @MERGE]
  // /.main-visual

  .sec-product-slider.js-product-slider
    .splide
      .splide__track
        .splide__list
          each i in Array(4)
            .splide__slide
              .card-product
                a.card-product__link(href="#" aria-label="View CORA PLUNGE BRALETTE")
                figure.card-product__image
                  +img(src="/src/images/products/img-product-01.jpg" alt="CORA PLUNGE BRALETTE")
                .card-product__info
                  label.card-product__favorite(aria-label="Add to favorite")
                    input(type="checkbox" name="favorite" value="")
                    span.card-product__favorite-icon
                  p.card-product__name CORA PLUNGE BRALETTE
                  .card-product__price
                    p THB 1,500
            .splide__slide
              .card-product
                a.card-product__link(href="#" aria-label="View LARA BRA TOP")
                figure.card-product__image
                  +img(src="/src/images/products/img-product-02.jpg" alt="LARA BRA TOP")
                .card-product__info
                  label.card-product__favorite(aria-label="Add to favorite")
                    input(type="checkbox" name="favorite" value="")
                    span.card-product__favorite-icon
                  p.card-product__name LARA BRA TOP
                  .card-product__price
                    p THB 1,500
  // /sec-product-slider

  .sec-flash-sale
    .sec-flash-sale__inner
      +img.sec-flash-sale__title(src="/src/images/common/text-flash-sale.svg" alt="FLASH SALE")
      - const endTime = new Date(new Date().setDate(new Date().getDate() + 1)).toISOString();
      .sec-flash-sale__time.js-countdown(data-end-time=endTime)
        .sec-flash-sale__rollers
          .sec-flash-sale__roller.sec-flash-sale__roller--hour
            .sec-flash-sale__digit.js-h-tens
              each i in Array.from({ length: 10 }, (_, i) => i).concat(0).reverse()
                span= i
            .sec-flash-sale__digit.js-h-ones
              each i in Array.from({ length: 10 }, (_, i) => i).concat(0).reverse()
                span= i
          p.sec-flash-sale__unit.sec-flash-sale__unit--hour Hour
        .sec-flash-sale__colon
        .sec-flash-sale__rollers
          .sec-flash-sale__roller
            .sec-flash-sale__digit.js-m-tens
              each i in Array.from({ length: 6 }, (_, i) => i).concat(0).reverse()
                span= i
            .sec-flash-sale__digit.js-m-ones
              each i in Array.from({ length: 10 }, (_, i) => i).concat(0).reverse()
                span= i
          p.sec-flash-sale__unit Min
        .sec-flash-sale__colon
        .sec-flash-sale__rollers
          .sec-flash-sale__roller
            .sec-flash-sale__digit.js-s-tens
              each i in Array.from({ length: 6 }, (_, i) => i).concat(0).reverse()
                span= i
            .sec-flash-sale__digit.js-s-ones
              each i in Array.from({ length: 10 }, (_, i) => i).concat(0).reverse()
                span= i
          p.sec-flash-sale__unit Sec
  // .sec-flash-sale

  .sec-product-slider.js-product-slider
    .splide
      .splide__track
        .splide__list
          each i in Array(4)
            .splide__slide
              .card-product
                a.card-product__link(href="#" aria-label="View CORA PLUNGE BRALETTE")
                p.card-product__discount -30% OFF
                figure.card-product__image
                  +img(src="/src/images/products/img-product-01.jpg" alt="CORA PLUNGE BRALETTE")
                .card-product__info
